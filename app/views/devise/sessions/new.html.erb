<style type="text/css">
  body {padding-top: 40px;padding-bottom: 40px;background-repeat: repeat-x;background-color: #002958;background: url('/assets/blue-gradient-bg.png');}
  .form-signin {max-width: 300px;padding: 19px 29px 29px;margin: 0 auto 20px;background-color: #fff;border: 1px solid #e5e5e5;-webkit-border-radius: 5px;-moz-border-radius: 5px;border-radius: 5px;-webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);-moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);box-shadow: 0 1px 2px rgba(0,0,0,.05);}
  .form-signin .form-signin-heading,.form-signin .checkbox {margin-bottom: 10px;}
  .form-signin input[type="text"],.form-signin input[type="password"] {font-size: 16px;height: 20px;margin-bottom: 15px;padding: 7px 9px;}
  .container{margin-top:2%;color:#000;width:24%;}
  #logo_nuvola{margin-left: -2%;}
</style>
<div class="container">
  <img id="logo_nuvola" src="/assets/logo-login.png">
  <%= form_for(resource, :as => resource_name, :html => {class: "form-signin"} , :url => session_path(resource_name)) do |f| %>
    <h2 class="form-signin-heading">Iniciar Sesion</h2>
    <%= f.email_field :email, :placeholder => "Email", :class => 'input-block-level' %>
    <%= f.password_field :password, :placeholder => "Password", :class => 'input-block-level' %>
    <% if devise_mapping.rememberable? -%>
      <label class="checkbox">Recuerdame <%= f.check_box :remember_me %></label>
    <% end -%>
    <br>
    <%= f.submit "Iniciar Sesion", :class => 'btn btn-primary' %>
    <br>
    <br>
  <% end -%>
  <%= render :partial => "devise/shared/links" %>
</div>